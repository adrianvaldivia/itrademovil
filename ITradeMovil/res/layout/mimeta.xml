<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="426dp"
        android:background="@color/blanco"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/top_control_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/blanco"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/azul_2"
                    android:orientation="vertical" >

                   

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="246dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:background="@color/azul_2"
                            android:text="iTrade"
                            android:textColor="@color/grisClaro"
                            android:textSize="20dip" />

                        <ImageButton
                            android:id="@+id/ImageButton06"
                            android:layout_width="58dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@color/azul_2"
                            android:src="@drawable/maps" />
                 </LinearLayout>
              </LinearLayout>

              <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:background="@color/blanco"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="2dp"
                        android:layout_height="2dp" />
              </LinearLayout>

              <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/azul_2"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/azul_2" >

                        <ImageButton
                            android:id="@+id/ImageButton04"
                            style="@drawable/estilo_botones"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_botones"
                            android:src="@drawable/user_customer" />

                        <ImageButton
                            android:id="@+id/ImageButton07"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_botones"
                            android:src="@drawable/e_mail" />

                        <ImageButton
                            android:id="@+id/ImageButton05"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_botones"
                            android:src="@drawable/users_search" />

                        <ImageButton
                            android:id="@+id/ImageButton02"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_botones"
                            android:src="@drawable/emblem_money" />

                        <ImageButton
                            android:id="@+id/ImageButton01"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_botones"
                            android:src="@drawable/directorio" />

                        <ImageButton
                            android:id="@+id/ImageButton03"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_botones"
                            android:src="@drawable/calendar" />
                    </LinearLayout>
                                                
                </LinearLayout>
            
        </RelativeLayout>
        
        
        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
        
            
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_weight="0.55"
                android:background="@color/blanco"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blanco" >

        		<TextView
        		    android:id="@+id/textView1"
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:layout_marginTop="72dp"
        		    android:text="Periodo"
        		    android:textColor="@color/azul_2" />

        		<TextView
        		    android:id="@+id/txt_periodometa"
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:text="Octubre-Noviembre" />

        		<TextView
            		android:id="@+id/textView4"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginLeft="45dp"
            		android:text="Venta actual:"
            		android:textColor="@color/azul_2" />
            

        		<TextView
            		android:id="@+id/textView2"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginBottom="28dp"
            		android:text="Meta:"
            		android:textColor="@color/azul_2" />

        		<TextView
        		    android:id="@+id/txt_avancemeta"
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:text="S/. 3 250"
        		    android:textColor="@color/azul_2" />

        		<TextView
        		    android:id="@+id/txt_metareal"
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:text="S/. 5 000"
        		    android:textColor="@color/azul_2" />

        		<ProgressBar
            		android:id="@+id/progressBar1"
            		style="?android:attr/progressBarStyleHorizontal"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="50dp"
            		android:progress="65" />

		        <TextView
        		    android:id="@+id/textView6"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:text="0%"
            		android:textColor="@color/azul_2" />

        		<TextView
            		android:id="@+id/textView7"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:text="100%"
            		android:textColor="@color/azul_2" />

   		</LinearLayout>

       </LinearLayout>
       </LinearLayout>
               
        <LinearLayout
                android:id="@+id/bottom_control_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/blanco"
                android:gravity="bottom" >


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blanco" >
           
    		    <Button
    		        android:id="@+id/btn_aceptarmeta"
    		        style="@drawable/estilo_botones"
    		        android:layout_width="match_parent"
    		        android:layout_height="wrap_content"
    		        android:layout_weight="0.05"
    		        android:background="@drawable/estilo_botones"
    		        android:text="@string/aceptar"
    		        android:textColor="@color/blanco" />

 </LinearLayout>
            </LinearLayout>

        
        
        </LinearLayout>

</RelativeLayout>