<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/blanco"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/top_control_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="top" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/blanco"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/azul_2"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp" >

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="246dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:background="@color/azul_2"
                            android:text="iTrade"
                            android:textColor="@color/grisClaro"
                            android:textSize="20dip" />

                        <ImageButton
                            android:id="@+id/ImageButton06"
                            android:layout_width="58dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@color/azul_2"
                            android:src="@drawable/maps" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="2dp"
                        android:layout_height="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/azul_2"
                    android:orientation="vertical" >

                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/azul_2" >

            <ImageButton
                android:id="@+id/btnCrearPedido"
                style="@drawable/estilo_botones"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:background="@drawable/estilo_botones"
                android:src="@drawable/add_to_cart" />

            <ImageButton
                android:id="@+id/btnBuscarPedido"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:background="@drawable/estilo_botones"
                android:src="@drawable/buscar_pedido" />

            <ImageButton
                android:id="@+id/btnProspectos"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:background="@drawable/estilo_botones"
                android:src="@drawable/user_customer" />

            <ImageButton
                android:id="@+id/btnDirectorio"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:background="@drawable/estilo_botones"
                android:src="@drawable/directorio" />

            <ImageButton
                android:id="@+id/btnCalendario"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:background="@drawable/estilo_botones"
                android:src="@drawable/calendar" />

            <ImageButton
                android:id="@+id/btnMeta"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:background="@drawable/estilo_botones"
                android:src="@drawable/excelencia" />
        </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TextView1"
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Contacto"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/azul_2" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:src="@drawable/contacts" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/pdni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el DNI"
                android:inputType="number"
                android:maxLength="8"
                android:layout_marginTop="1dp"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <EditText
                android:id="@+id/pnombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:hint="Ingrese el Nombre"
                android:layout_marginTop="1dp"
                android:inputType="textNoSuggestions"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/papellidopat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese Apellido Paterno"
                android:layout_marginTop="1dp"
                android:inputType="textNoSuggestions"
                android:ems="10" />

        </LinearLayout>

                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/papellidomat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese Apellido Materno"
                android:layout_marginTop="1dp"
                android:inputType="textNoSuggestions"
                android:ems="10" />

        </LinearLayout>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el TelÃ©fono"
                android:maxLength="9"
                android:inputType="number"
                android:layout_marginTop="1dp"
                android:ems="10" />

        </LinearLayout>
                

        
        </LinearLayout>
        

</RelativeLayout>