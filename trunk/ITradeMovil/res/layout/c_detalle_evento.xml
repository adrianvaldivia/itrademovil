<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/blanco"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_control_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/blanco"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/azul_2" >


                <TextView
                    android:id="@+id/txtItrade"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:background="@color/azul_2"
                    android:text="iTrade - Evento"
                    android:textColor="@color/grisClaro"
                    android:textSize="20dip" />

                <ImageButton
                    android:id="@+id/c_eve_btnExplorar"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/azul_2"
                    android:src="@drawable/maps" />

            </LinearLayout>

           <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/azul_2" >

                        <ImageButton
                            android:id="@+id/c_eve_btnPedidos"
                            style="@drawable/estilo_botones"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_botones"
                            android:src="@drawable/user_customer" />

                        <ImageButton
                            android:id="@+id/c_eve_btnNotificar"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_botones"
                            android:src="@drawable/e_mail" />

                        <ImageButton
                            android:id="@+id/c_eve_btnBuscarClientes"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_botones"
                            android:src="@drawable/users_search" />

                        <ImageButton
                            android:id="@+id/c_eve_btnCalcularMonto"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_botones"
                            android:src="@drawable/emblem_money" />

                        <ImageButton
                            android:id="@+id/c_eve_btnDirectorio"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_botones"
                            android:src="@drawable/directorio" />

                        <ImageButton
                            android:id="@+id/c_eve_btnCalendario"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/estilo_default"
                            android:src="@drawable/calendar" />
                    </LinearLayout>
        </LinearLayout>
>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_control_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.10" >


            <Button
                android:id="@+id/buttonvermapa"
                style="@drawable/estilo_botones"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:background="@drawable/estilo_botones"
                android:text="@string/aceptar"
                android:textColor="@color/blanco" />

        </LinearLayout>
    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_control_bar"
        android:layout_below="@id/top_control_bar"
        android:focusable="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/c_txtHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="@string/hora_eveto"
            android:textColor="@color/OrangeRed"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/c_TextView02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/lugar"
            android:textColor="@color/azul_2"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/c_txtLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:ems="10" />

        <TextView
            android:id="@+id/c_TextView03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/descripcion"
            android:textColor="@color/azul_2"
            android:textSize="17dp" />




        <EditText
            android:id="@+id/c_txtDesc"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textMultiLine" />

    </LinearLayout>

</RelativeLayout>