<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/azul_2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp" >

                <TextView
                    android:id="@+id/txtItrade"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:background="@color/azul_2"
                    android:text="iTrade"
                    android:textColor="@color/grisClaro"
                    android:textSize="20dip" />

                <ImageButton
                    android:id="@+id/btnExplorar"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/azul_2"
                    android:src="@drawable/04_maps" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="2dp"
                android:layout_height="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/azul_2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/azul_2" >

                <ImageButton
                    android:id="@+id/btnPedidos"
                    style="@drawable/estilo_botones"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/estilo_botones"
                    android:src="@drawable/user_customer" />

                <ImageButton
                    android:id="@+id/btnNotificar"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/estilo_botones"
                    android:src="@drawable/e_mail" />

                <ImageButton
                    android:id="@+id/btnBuscarClientes"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/estilo_botones"
                    android:src="@drawable/users_search" />

                <ImageButton
                    android:id="@+id/btnCalcularMonto"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/estilo_botones"
                    android:src="@drawable/emblem_money" />

                <ImageButton
                    android:id="@+id/btnDirectorio"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/estilo_botones"
                    android:src="@drawable/directorio" />

                <ImageButton
                    android:id="@+id/btnCalendario"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/estilo_botones"
                    android:src="@drawable/02_calendar" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_control_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blanco"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <Spinner
                    android:id="@+id/spinnercategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="271dp"
            android:background="@color/blanco"
            android:choiceMode="multipleChoice" >

        </ListView>

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/listavacia" />

        <LinearLayout
            android:id="@+id/bottom_control_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco" >

            <Button
                android:id="@+id/buttonaceptar"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:background="@drawable/estilo_botones"
                android:text="@string/aceptar"
                android:textColor="@color/grisClaro" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>